// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id          String @id @default(uuid())
  full_name   String
  social_name String
  password    String
  email       String @unique
  cpf         Int
  gender      String
  phone       Int
  cep         Int
  address     String
  complement  String
  role        Int
  Call        Call[]
}

model Call {
  id         Int      @id @default(autoincrement())
  status     String
  latitude   Float
  longitude  Float
  created_at DateTime @default(now())
  user       User     @relation(fields: [user_id], references: [id])
  user_id    String
}
